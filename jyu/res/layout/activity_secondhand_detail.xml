<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar" />

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#EAECEB"
        android:fadingEdge="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EAECEB"
            android:orientation="vertical" >

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#FFF"
                android:padding="2dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#F7F9F8"
                android:orientation="horizontal"
                android:paddingBottom="8dip"
                android:paddingLeft="18dip"
                android:paddingRight="18dip"
                android:paddingTop="8dip" >

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥89"
                    android:textColor="@color/red"
                    android:textSize="20sp" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="0dip"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:text="2015.1.1 8:80"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#DCDEDD" />

            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/product_detail_bg"
                android:orientation="vertical"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/product_text_style"
                        android:text="商品详情"
                        android:textColor="#333" />

                    <View
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/android_list_idex" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dip"
                    android:layout_marginTop="12dip"
                    android:background="@drawable/news_list_line" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:text="点亮一盏残灯，挥袖而坐，剪一寸摇曳的烛影，手捧前朝典藉点亮一盏残灯，挥袖而坐，剪一寸摇曳的烛影，手捧前朝典藉，点亮一盏残灯，挥袖而坐，剪一寸摇曳的烛影，手捧前朝典藉，点亮一盏残灯，挥袖而坐，剪一寸摇曳的烛影，手捧前朝典藉，点亮一盏残灯，挥袖而坐，剪一寸摇曳的烛影，手捧前朝典藉，点亮一盏残灯，挥袖而坐，剪一寸摇曳的烛影，手捧前朝典藉，点亮一盏残灯，挥袖而坐，剪一寸摇曳的烛影，手捧前朝典藉，点亮一盏残灯，挥袖而坐，剪一寸摇曳的烛影，手捧前朝典藉，点亮一盏残灯，挥袖而坐，剪一寸摇曳的烛影，手捧前朝典藉，点亮一盏残灯，挥袖而坐，剪一寸摇曳的烛影，手捧前朝典藉，点亮一盏残灯，挥袖而坐，剪一寸摇曳的烛影，手捧前朝典藉，点亮一盏残灯，挥袖而坐，剪一寸摇曳的烛影，手捧前朝典藉，点亮一盏残灯，挥袖而坐，剪一寸摇曳的烛影，手捧前朝典藉，点亮一盏残灯，挥袖而坐，剪一寸摇曳的烛影，手捧前朝典藉，点亮一盏残灯，挥袖而坐，剪一寸摇曳的烛影，手捧前朝典藉，，借着飘乎的灯火，嗅着幽幽的书香，畅游神思间，凝眸慨叹那些湮灭在滚滚红尘里的雕梁画栋和六朝金粉。凭栏遥望处，残红满目，荠麦青青，几声鸿雁的哀鸣震落了断壁残垣上经年昏睡的尘埃。"
                    android:textColor="#6f7072"
                    android:textSize="18sp" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/product_detail_bg"
                android:orientation="vertical"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/product_text_style"
                        android:text="卖家信息"
                        android:textColor="#333" />

                    <View
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/android_list_idex" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dip"
                    android:layout_marginTop="12dip"
                    android:background="@drawable/news_list_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/userHead"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/default_users_avatar" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:text="UserName"
                            android:textColor="#815F3D"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/udespripion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:text="description"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#DEE0DF" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFF1F0"
        android:gravity="center_vertical"
        android:padding="8dip" >

        <ImageView
            android:id="@+id/iv_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/product_buy_selector" />
    </RelativeLayout>

</LinearLayout>