<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E8Eff6"
    android:orientation="vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EAECEB"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:padding="2dp" >

                <ImageView
                    android:contentDescription="qe"
                    android:id="@+id/upic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/tou" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_uname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="username"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_udescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="udescription"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="10dp"
                        android:background="#00000000"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="帮帮忙，今天在中区图书馆三楼丢失的一部手机"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <com.jyu.view.custom.photoutil.MyGridView
                            android:id="@+id/noScrollgridview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dip"
                            android:horizontalSpacing="10dp"
                            android:numColumns="3"
                            android:scrollbars="none"
                            android:verticalSpacing="10dp" >
                        </com.jyu.view.custom.photoutil.MyGridView>
                    </LinearLayout>
                    <TableLayout
                     android:background="@drawable/product_detail_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:stretchColumns="2" >

                    <TableRow
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/clock" />

                        <TextView
                            android:textSize="14dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/username"
                            android:padding="3dip"
                            android:scrollHorizontally="true"
                            android:text="遗失地点"
                            android:textColor="#0e8ecf" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:textColor="#0e8ec9"
                            android:layout_marginLeft="10dp"
                            android:padding="3dip"
                            android:scrollHorizontally="true"
                            android:text="王浩明" />
                    </TableRow>
                    
                    <TableRow
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/clock" />

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:padding="3dip"
                            android:scrollHorizontally="true"
                            android:text="遗失时间"
                            android:textColor="#0e8ec9" />

                        <TextView
                            android:id="@+id/tv_ltime"
                            android:textColor="#0e8ec9"
                            android:layout_marginLeft="10dp"
                            android:padding="3dip"
                            android:scrollHorizontally="true"
                            android:text="王浩明" />
                    </TableRow>
                    
                    <TableRow
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/clock" />

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:padding="3dip"
                            android:scrollHorizontally="true"
                            android:text="联系方式"
                            android:textColor="#0e8ec9" />

                        <TextView
                            android:id="@+id/tv_contact"
                            android:textColor="#0e8ec9"
                            android:layout_marginLeft="10dp"
                            android:padding="3dip"
                            android:scrollHorizontally="true"
                            android:text="王浩明" />
                    </TableRow>
                    
                    <TableRow
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/clock" />

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:padding="3dip"
                            android:scrollHorizontally="true"
                            android:text="具体描述"
                            android:textColor="#85000000" />

                        <TextView
                            android:padding="3dip"
                            android:scrollHorizontally="true"
                            android:text="王浩明" />
                    </TableRow>
                    
                   
                </TableLayout>
                </LinearLayout>
                
            </LinearLayout>
            
              
</LinearLayout>
           

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#DEE0DF" />
    
    <TextView 
        android:id="@+id/tv_replyCount"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:background="#F8FbFD"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="评论N条"
        />
     <TextView 
         android:id="@+id/tv_loadding"
         android:paddingTop="10dp"
         android:paddingBottom="10dp"
         android:gravity="center"
        android:background="#F8FbFD"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="正在加载中"
        />

</LinearLayout>